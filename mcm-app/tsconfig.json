// tsconfig.json (raíz)
{
  "extends": "expo/tsconfig.base",
  "compilerOptions": {
    "forceConsistentCasingInFileNames": true,
    "strict": true,
    "skipLibCheck": true, // ✨ evita chequear tipos en node_modules
    "module": "ES2020",
    "types": ["node"],
    "paths": {
      "@/*": ["./*"]
    }
  },
  "include": [
    "app/**/*.ts",
    "app/**/*.tsx",
    "components/**/*.ts",
    "components/**/*.tsx",
    "constants/**/*.ts",
    "constants/**/*.tsx",
    "hooks/**/*.ts",
    "hooks/**/*.tsx",
    "notifications/**/*.ts",
    "notifications/**/*.tsx",
    ".expo/types/**/*.ts",
    "expo-env.d.ts",
    "app.config.ts"
  ],
  "exclude": [
    "node_modules",
    "**/__tests__/**",
    "babel.config.js",
    "metro.config.js"
  ]
}
